{
  "name": "md-viewport",
  "version": "2.0.1",
  "description": "Render Markdown files into a rich, well-styled HTML page in the browser",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mdvp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "renderer",
    "cli",
    "html",
    "preview",
    "github-flavored-markdown",
    "gfm",
    "mermaid",
    "katex",
    "syntax-highlighting",
    "browser",
    "viewer"
  ],
  "author": "showwaiyan",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Showwaiyan/md-viewport.git"
  },
  "bugs": {
    "url": "https://github.com/Showwaiyan/md-viewport/issues"
  },
  "homepage": "https://github.com/Showwaiyan/md-viewport#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "marked-gfm-heading-id": "^4.1.3",
    "marked-highlight": "^2.2.3",
    "open": "^11.0.0"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^25.0.8",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
